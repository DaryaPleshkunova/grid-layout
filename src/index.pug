    mixin logo()
      .logo&attributes(attributes)
          svg(viewBox="0 0 191 31")
            use(href="images/svg/sprite.svg#logo")

    mixin social()
      ul.social-list&attributes(attributes)
        each socialListItem in socialListItems
          li
            a.social-list__link(href= socialListItem.link)
              svg.social-list__icon(viewBox="0 0 30 30")
                use(href= socialListItem.icon)

    h1.sr-only Фотостудия High Pass

    header.header
      .container.header__container
        +logo(class="header__logo")

        nav.nav.header__nav
          button#header__burger.burger
            span.burger__bar
            span.burger__bar
            span.burger__bar

          ul#header__nav.nav-list.header__nav-list
            each navListItem in navListItems
              li.nav-list__item
                a.nav-list__link(href= navListItem.href)= navListItem.name

        form.search-form.header__search-form(action="https://jsonplaceholder.typicode.com/gets", method="get")
          button#search-form__button.search-form__button
            svg(viewBox="0 0 25 25")
              use(href="images/svg/sprite.svg#search")

          input#search-form__input.search-form__input.search-form__input_hidden(type="text", name="search", placeholder="Что будем искать?")

        +social(class="header__social-list")

    main.main
      .container.container_two-columns.first-section
        section.masterclass-section
          picture.masterclass-section__background-img
            source(media="(max-width: 767px)", srcset="images/photos/mobile_size_s/masterclass.jpg")
            source(media="(min-width: 768px) and (max-width:1023px)", srcset="images/photos/mobile_size_l/masterclass.jpg")
            source(media="(min-width: 1024px) and (max-width: 1366px)", srcset="images/photos/tablet/masterclass.jpg")
            img(src="images/photos/desktop/masterclass.jpg", alt="Фотография с мастеркласса")

          .masterclass-section__content
            span.category.masterclass-section__category Мастеркласс
            span.masterclass-section__comment Мастер-класс от Игоря Робова
            h2.heading.masterclass-section__heading Неоновый фотосет 2.0 7&nbsp;июля 20:00
            a.button.masterclass-section__button(href="#") Узнать больше

        section.previous-works-section
          h2.heading.previous-works-section__heading Работы участников предыдущего мастер-класса

          ul.previous-works-section__list
            each previousWorksSectionItem in previousWorksSectionItems
              li(class= previousWorksSectionItem.class)
                picture.previous-works-section__picture
                  source(media="(max-width: 767px)", srcset= previousWorksSectionItem.pictureMobileSizeS)
                  source(media="(min-width: 768px) and (max-width:1023px)", srcset= previousWorksSectionItem.pictureMobileSizeL)
                  source(media="(min-width: 1024px) and (max-width: 1366px)", srcset= previousWorksSectionItem.pictureTablet)
                  img(src= previousWorksSectionItem.pictureDesktop, alt= previousWorksSectionItem.pictureDescription)

      section#about.about-section
        .container.about-section__container
          .about-section_left-column
            h2.heading.about-section__heading О студии
            p.about-section__text В рамках спецификации современных стандартов, интерактивные прототипы, инициированные исключительно синтетически, ограничены исключительно образом мышления. Предварительные выводы неутешительны: высокотехнологичная концепция общественного уклада требует от нас анализа соответствующих условий активизации! Следует отметить, что семантический разбор внешних противодействий фиксирует необходимость распределения внутренних резервов и ресурсов. Безусловно, граница обучения кадров предоставляет широкие возможности для первоочередных требований. Повседневная практика показывает, что глубокий уровень погружения предполагает независимые способы реализации новых принципов формирования материально&#8209;технической и кадровой базы. Приятно, граждане, наблюдать, как явные признаки институционализации являются только методом политического участия и нарушающими общечеловеческие нормы этики.

          .about-section_right-column
            h3.heading.about-section__subscribe-heading Подписаться на рассылку

            form.about-section__form(action="https://jsonplaceholder.typicode.com/posts", method="post")
              input.input.about-section__input(type="email", name="email", placeholder="Email", data-validate-field="email", autocomplete="on", required)
              button.button(type="submit") Отправить

      section.our-projects-section#our-projects
        .container
          h2.heading.our-projects-section__heading Наши проекты

          ul.our-projects-section__list
            each ourProjectsItem in ourProjectsItems
              li(class= ourProjectsItem.listItemClass)
                article.article
                  picture.article__img
                    source(media="(max-width: 767px)", srcset= ourProjectsItem.pictureMobileSizeS)
                    source(media="(min-width: 768px) and (max-width:1023px)", srcset= ourProjectsItem.pictureMobileSizeL)
                    source(media="(min-width: 1024px) and (max-width: 1366px)", srcset= ourProjectsItem.pictureTablet)
                    img(src= ourProjectsItem.pictureDesktop, alt= ourProjectsItem.pictureDescription)

                  if ourProjectsItem.main
                    .main-article__content
                      span.category.article__category= ourProjectsItem.category
                      h3.heading.article__heading= ourProjectsItem.heading
                      p.article__description= ourProjectsItem.description
                      button.button.article__button= ourProjectsItem.button
                      span.article__date= ourProjectsItem.date
                  else
                    span.category.article__category= ourProjectsItem.category
                    p.article__description= ourProjectsItem.description
                    span.article__date= ourProjectsItem.date


      .container.container_two-columns.address-section#contacts
        address.address
          h2.heading.address__heading Контакты

          .address__wrapper
            div.address__map#map

            button.open-close-btn.open-btn.address__open-btn#address__open-btn
              .open-btn__bar-wrapper
                span.open-btn__bar
                span.open-btn__bar

            .address__content#address__content
              button.open-close-btn.close-btn.address__close-btn#address__close-btn
                span.close-btn__bar
                span.close-btn__bar

              span.address__name Студия “High pass”

              p.address__description 107045, Москва, Даев переулок, дом 41, бизнес-центр «Даев Плаза», этаж 8, офис&nbsp;№&nbsp;82
                a.address__phone-link(href="tel:749542423532") +7 (495) 42-423-532
                  svg.address__phone-icon(viewBox="0 0 30 30")
                    use(href="images/svg/sprite.svg#call")

        .apply-section
          h3.heading.apply-section__heading Оставить заявку

          p.apply-section__description Оставьте ваши данные, указав в графе “Комментарий” желаемые время и дату съемки или другого мероприятия

          form.apply-form(action="https://jsonplaceholder.typicode.com/posts", method="post")
            ul
              li.apply-form__item
                input.input(type="text", name="name", placeholder="Имя", data-validate-field="name")

              li.apply-form__item
                input.input(type="email", name="email", placeholder="E-mail", data-validate-field="email")

              li.apply-form__item
                textarea.input.apply-section__textarea(name="comment", placeholder="Комментарий", data-validate-field="text")

            button.button.apply-form__button(type="submit") Отправить

    footer.footer
      .container.footer__container
        .footer__logo-wrapper
          +logo()
          span Фотостудия High pass® 2018-2020

        .footer__quote
          p Которая из моих фотографий самая любимая? Та, которую я собираюсь снять завтра.
          span.footer__quote-author © Имоджен Каннингем

        .footer__social-wrapper
          span Больше интересного
          +social()

    script(src="main.js", type="text/javascript")
