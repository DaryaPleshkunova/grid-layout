    - var previousWorksSectionItems = [{class: "previous-works-section__main-picture-item", pictureMobileSizeS: "images/photos/mobile_size_s/example1.jpg", pictureMobileSizeL: "images/photos/mobile_size_l/example1.jpg", pictureTablet: "images/photos/tablet/example1.jpg", pictureDesktop: "images/photos/desktop/example1.jpg", pictureDescription: "Работа участника"}, {pictureMobileSizeS: "images/photos/mobile_size_s/example2.jpg", pictureMobileSizeL: "images/photos/mobile_size_l/example2.jpg", pictureTablet: "images/photos/tablet/example2.jpg", pictureDesktop: "images/photos/desktop/example2.jpg", pictureDescription: "Работа участника"}, {pictureMobileSizeS: "images/photos/mobile_size_s/example3.jpg", pictureMobileSizeL: "images/photos/mobile_size_l/example3.jpg", pictureTablet: "images/photos/tablet/example3.jpg", pictureDesktop: "images/photos/desktop/example3.jpg", pictureDescription: "Работа участника"}]
